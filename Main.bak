task main() {
     TextOut(0, 60, "Block Heads");
     TextOut(0, 50, "Main");
     TextOut(0, 40, "Version 1.0");
     
     
     State variable = search;
     
     
     case search:
          move forward
          interrupt: checking for line detection
                     turn around
          interrupt: checking for cup detection (delta distance)
     
     case grab:
          orient toward the cup (tough)
          open claws
          move into position
          grab
          possible sense that cup is there (optional)

     
     case remove:
          move forward
          line detect
          drop cup
          turn around

     
     TextOut(0, 10, "Distance Reading");
     SetSensorUltrasonic(S2);
     //while (true) {
     //      TextOut(20, 0, " ");
     //      NumOut(0, 0, SensorUS(S2));
     //}
     
     // Makes the claws open and close


     //RotateMotor(OUT_B, 75, 720);
     //RotateMotor(OUT_C, 75, 720);
}

Function openclaws() {
     RotateMotor(OUT_A, 75, 60);
}

Function closeClaws() {
     RotateMotor(OUT_A, 75, - 60);
}



